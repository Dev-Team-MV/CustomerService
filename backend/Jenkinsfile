// Job independiente: solo backend. En Jenkins → Script Path: backend/Jenkinsfile
// Requiere: plugin "Node.js" + en Global Tool Configuration una instalación Node (nombre: NodeJS). Docker en el agente para Build Docker Image.
pipeline {
  agent any

  tools {
    nodejs 'NodeJS'
  }

  options {
    timeout(time: 15, unit: 'MINUTES')
  }

  environment {
    IMAGE_NAME = "customer-service-backend"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install & Test') {
      steps {
        dir('backend') {
          sh 'npm ci'
          sh 'npm run test || true'
        }
      }
    }

    stage('Build Docker Image') {
      steps {
        dir('backend') {
          script {
            docker.build(env.IMAGE_NAME)
          }
        }
      }
    }
  }

  post {
    always {
      cleanWs()
    }
  }
}
